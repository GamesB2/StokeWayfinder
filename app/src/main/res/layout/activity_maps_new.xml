<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="4"
            android:rowCount="2">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="610dp"
                android:layout_weight="0.86"
                android:layout_gravity="bottom"
                tools:context="com.example.w028006g.regnlogin.activity.MapsActivityNew"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="70dp"
                android:layout_height="84dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="89dp"
                android:background="@android:color/holo_blue_light"
                android:padding="16dp"
                android:text="Button 2"
                android:textColor="@android:color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_login">

            <ImageButton
                android:id="@+id/FilterButton"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/place_autocomplete_fragment"
                android:layout_gravity="right"
                android:layout_marginStart="26dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bg_login"
                android:tint="#fff"
                app:srcCompat="@drawable/recbar" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:weightSum="1">

                <fragment
                    android:id="@+id/place_autocomplete_fragment"
                    android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                    android:layout_width="413dp"
                    android:layout_height="67dp"
                    android:layout_alignTop="@+id/button_2"
                    android:layout_toEndOf="@+id/FilterButton" />

            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:clipToPadding="false"
        android:background="@android:drawable/dialog_frame"
        android:backgroundTint="#e1f5fe"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:elevation="16dp"
        android:outlineProvider="bounds"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/button_3"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="89dp"
                android:background="@drawable/expandedmock"
                android:padding="16dp"
                android:text="Button 2"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:padding="16dp"
                android:text="wqergteargeagrearg"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:elevation="50dp">


        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavView_Bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:menu="@menu/bottom_navigation_menu"
            android:elevation="8dp"
            app:elevation="8dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_above="@id/bottomBar"
                android:background="@drawable/shadow"/>

        </android.support.design.widget.BottomNavigationView>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>