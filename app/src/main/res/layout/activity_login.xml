<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_login"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">


    <ImageView
        android:layout_width="158dp"
        android:layout_height="146dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_white"
        android:scaleX="0.9"
        android:scaleY="0.9"
        />

    <LinearLayout
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bg_login"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="70dp"
        android:weightSum="1">


        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint"/>

        <GridLayout
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:rowCount="2">

            <Button
                android:id="@+id/btnLinkToReset"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@null"
                android:gravity="start"
                android:text="Forgot Password?"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnLinkToRegisterScreen"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="4"
                android:layout_gravity="right"
                android:layout_row="0"
                android:background="@null"
                android:gravity="right"
                android:paddingRight="18dp"
                android:text="@string/btn_link_to_register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </GridLayout>


        <!-- Login Button -->

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:layout_marginTop="15dip"

            android:background="@color/white"
            android:text="@string/btn_login"
            android:textColor="#000"/>


        <!-- Link to Login Screen -->

        <TextView
            android:id="@+id/loginvia"
            android:layout_width="wrap_content"
<<<<<<< HEAD
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.05"
            android:background="@color/bg_login"
            android:padding="10dp"
            android:text="Or Login Via"
            android:textColor="@color/white"
            android:textColorHint="@color/input_login_hint" />

    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:rowCount="4">



        <Button
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:text="Skip for now! Sign up later..."
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"/>



            <Button
                android:id="@+id/googleplus"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="0.29"
                android:background="@drawable/tw__login_btn_default"
                android:drawableStart="@drawable/tw__ic_logo_default"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Twitter"
                android:textAllCaps="false"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/space"
                android:layout_width="10dp"
                android:layout_height="45dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/bg_login"
                />
            <Button
                android:id="@+id/facebook"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="0.29"
                android:background="@drawable/com_facebook_button_login_background"
                android:drawableStart="@drawable/com_facebook_button_login_logo"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Facebook"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </GridLayout>
    </LinearLayout>
