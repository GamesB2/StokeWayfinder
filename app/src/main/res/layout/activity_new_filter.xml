<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.w028006g.regnlogin.activity.NewFilterActivity">

    <CheckBox
        android:id="@+id/attractions"
        android:text="Attractions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16dip"
        android:buttonTint="@color/bg_main"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/landmarks"
        android:text="Landmarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16dip"
        android:buttonTint="@color/bg_main"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/events"
        android:text="Events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16dip"
        android:buttonTint="@color/bg_main"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Narrow results to within a"
            android:alpha="0.5"/>

        <EditText
            android:id="@+id/radiusID"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:clickable="false"
            android:ems="10"
            android:inputType="textPersonName"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:text="meter radius."
            android:alpha="0.5"/>

        <Switch
            android:id="@+id/switch3"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:thumbTint="@color/bg_register"
            android:checked="true"
            />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:thumbTint="@color/bg_register"
        />


    <ListView
        android:id="@+id/TagFilterList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
