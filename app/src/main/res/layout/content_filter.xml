<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.w028006g.regnlogin.activity.FilterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/clearFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restore Defaults"/>

        <Button
            android:id="@+id/clearMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Map"/>


        <CheckBox
            android:id="@+id/attractions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Attractions"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Events"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/landmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Landmarks"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/totems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/bg_register"
            android:checked="true"
            android:text="Totems"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Narrow results to within a"
                android:alpha="0.5"/>

            <EditText
                android:id="@+id/radiusID"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:clickable="false"
                android:ems="10"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:text="meter radius."
                android:alpha="0.5"/>

            <Switch
                android:id="@+id/switch3"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:thumbTint="@color/bg_register"
                android:checked="true"
                />

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:thumbTint="@color/bg_register"
            />

        <CheckBox
            android:id="@+id/music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Music"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Business"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/food_and_drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Food and Drink"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Community"
            android:buttonTint="@color/bg_register"/>
        <CheckBox
            android:id="@+id/arts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Arts"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/film_and_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Film and Media"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/sports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Sports"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/health_and_fitness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Health and Fitness"
            android:buttonTint="@color/bg_register"/>
        <CheckBox
            android:id="@+id/science_and_tech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Science and Tech"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/travel_and_outdoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Travel and Outdoor"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/charity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Charity"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/spirituality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Spirituality"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/family_and_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Family and Education"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/holiday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Holiday"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/government"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Government"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/fashion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Fashion"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/home_and_lifestyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Home and Lifestyle"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/auto_boat_and_air"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Auto, Boat and Air"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/hobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Hobbies"
            android:buttonTint="@color/bg_register"/>

        <CheckBox
            android:id="@+id/checkBox55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="CheckBox"
            android:buttonTint="@color/bg_register"/>





    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
